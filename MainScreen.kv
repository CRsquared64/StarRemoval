<MainScreen>:
    canvas.before:
        Color:
            rgba: 0.49, 0.49, 0.49, 1
        Rectangle:
            pos: self.pos
            size: self.size

    FloatLayout:
        pos_hint: {"y": 0}
        size_hint: 1, 1

    TextInput:
        id: input
        hint_text: 'Image name'
        pos_hint: {"x": 0.7, "y": 0.75}
        size_hint: 0.3, 0.05
        on_text: app.gettext(*args, image)
        multiline: False

    Label:
        pos_hint: {"x": -0.25, "y": 0.45}
        text: 'Basic star removal'
        font_size: 30

    Button:
        pos_hint: {"x": 0.7, "y": 0.8}
        size_hint: 0.3, 0.2
        text: 'REMOVE STARS'
        font_size: 24
        on_press: app.process()
    Image:
        id: image
        pos_hint: {"x" : 0, "y": 0}
        size_hint: 0.4, 0.5
    Image:
        id: jojo
        pos_hint: {"x": 0.5, "y": 0}
        size_hint: 0.4, 0.5

    TextInput:
        id: giorno
        pos_hint: {"x": 0.7, "y": 0.7}
        size_hint: 0.3, 0.05
        multiline: False
        hint_text: '0-1 detection rate (0 strongest)'
        on_text: app.threshold(*args, giorno)












