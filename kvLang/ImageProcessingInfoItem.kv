<ImageProcessingInfoItem>:
    BoxLayout:
        orientation: "vertical"
        size_hint: 1, 1

        on_height: most_holder.height = self.height - not_most_holder.height


        GridLayout:
            id: not_most_holder

            rows: 3
            cols: 2

            orientation: "tb-lr"
            size_hint_x: 1

            size_hint_y: None
            height: (15+3)*3

            Label:
                size_hint_x: None
                width: 100

                font_size: 15
                text_size: self.size
                halign: "left"

                text: "In Path:"

            Label:
                size_hint_x: None
                width: 100

                font_size: 15
                text_size: self.size
                halign: "left"

                text: "Out Path:"

            Label:
                size_hint_x: None
                width: 100

                font_size: 15
                text_size: self.size
                halign: "left"

                text: "Mask Path: "

            # ----------------------------------------------------------------------------------------------------------

            Label:
                id: path_label
                font_size: 15

                text: ""
                on_touch_up: if self.collide_point(args[1].x, args[1].y): root.label_clicked(self)

                underline: True

            Label:
                id: after_path_label
                font_size: 15

                text: ""
                on_touch_up: if self.collide_point(args[1].x, args[1].y): root.label_clicked(self)

                underline: True

            Label:
                id: mask_path_label
                font_size: 15

                text: ""
                on_touch_up: if self.collide_point(args[1].x, args[1].y): root.label_clicked(self)

                underline: True

        BoxLayout:
            id: most_holder

            orientation: "horizontal"
            size_hint_x: 1

            size_hint_y: None

            BoxLayout: # Text
                orientation: "vertical"
                size_hint_x: 0.5

                Label:
                    id: threshold_label
                    font_size: 15
                    text_size: self.size
                    halign: "left"
                    valign: "bottom"
                    text: "Threshold: "
                Label:
                    id: star_count_label
                    font_size: 15
                    text_size: self.size
                    halign: "left"
                    valign: "bottom"
                    text: "Stars: "
                Label:
                    id: time_label
                    font_size: 15
                    text_size: self.size
                    halign: "left"
                    valign: "bottom"
                    text: "Time Taken: "



            BoxLayout: # Images
                orientation: "horizontal"
                size_hint_x: 0.5

                padding: 20
                spacing: 20


                BoxLayout:
                    orientation: "vertical"

                    Label:
                        text: "Before:"
                        font_size: 20
                        on_texture: self.height = self.texture.height
                        size_hint_y: None

                    Image:
                        id: before_image


                BoxLayout:
                    orientation: "vertical"

                    Label:
                        text: "After:"
                        font_size: 20
                        on_texture: self.height = self.texture.height
                        size_hint_y: None

                    Image:
                        id: after_image