<ImageProcessingInfoItem>:
    BoxLayout:
        orientation: "vertical"
        size_hint: 1, 1

        on_height: most_holder.height = self.height - not_most_holder.height


        BoxLayout:
            id: not_most_holder

            orientation: "vertical"
            size_hint_x: 1

            size_hint_y: None
            height: (15+3)*3

            Label:
                id: path_label
                font_size: 15
                text_size: self.size
                halign: "left"
                valign: "bottom"

                text: "  In Path: "
                format: "In Path: {0}"

            Label:
                id: after_path_label
                font_size: 15
                text_size: self.size
                halign: "left"
                valign: "bottom"

                text: " Out Path: "
                format: "Out Path: {0}"

            Label:
                id: mask_path_label
                font_size: 15
                text_size: self.size
                halign: "left"
                valign: "bottom"

                text: "Mask Path: "
                format: "Mask Path: {0}"

        BoxLayout:
            id: most_holder

            orientation: "horizontal"
            size_hint_x: 1

            size_hint_y: None

            BoxLayout: # Text
                orientation: "vertical"
                size_hint_x: 0.5

                Label:
                    id: threshold_label
                    font_size: 15
                    text_size: self.size
                    halign: "left"
                    valign: "bottom"
                    text: "Threshold: "
                Label:
                    id: star_count_label
                    font_size: 15
                    text_size: self.size
                    halign: "left"
                    valign: "bottom"
                    text: "Stars: "
                Label:
                    id: time_label
                    font_size: 15
                    text_size: self.size
                    halign: "left"
                    valign: "bottom"
                    text: "Time Taken: "



            BoxLayout: # Images
                orientation: "horizontal"
                size_hint_x: 0.5

                padding: 20
                spacing: 20


                BoxLayout:
                    orientation: "vertical"

                    Label:
                        text: "Before:"
                        font_size: 20
                        on_texture: self.height = self.texture.height
                        size_hint_y: None

                    Image:
                        id: before_image


                BoxLayout:
                    orientation: "vertical"

                    Label:
                        text: "After:"
                        font_size: 20
                        on_texture: self.height = self.texture.height
                        size_hint_y: None

                    Image:
                        id: after_image